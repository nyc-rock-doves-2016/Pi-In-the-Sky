<body class="background">
  <div class="row">
    <div id="form" class="medium-4 medium-centered text-center columns">
      <div id="errors">
        <%= render './shared/errors'%>
      </div>
      <div id="login-input-field">
        <div>
          <%= form_tag new_login_path do %>
    <p>
      <%= email_field_tag :email, nil, placeholder: "Email" %>
    </p>

    <p>
      <%= password_field_tag :password, nil, placeholder: "Password" %>
    </p>

    <p>
      <%= submit_tag "Log In", class: "button large" %>
    </p>
  <% end %>


      </div>
  </div>
</body>
